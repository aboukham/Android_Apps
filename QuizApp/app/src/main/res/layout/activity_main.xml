<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question1: \nWhich of the sentences describes Kotlin language?"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent" />
    <RadioGroup
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/question1"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object oriented programming language"
            android:layout_marginLeft="40dp"></RadioButton>
        <RadioButton
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statically typed programming language"
            android:layout_marginLeft="40dp"></RadioButton>
        <RadioButton
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All of the above"
            android:layout_marginLeft="40dp"></RadioButton>
    </RadioGroup>
    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question2: \nWhich of these are kotlin data types?"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/group" />
    <CheckBox
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Int"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/question2"
        app:layout_constraintLeft_toLeftOf="parent"></CheckBox>
    <CheckBox
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="boolean"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button21"
        app:layout_constraintLeft_toLeftOf="parent"></CheckBox>
    <CheckBox
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="String"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button22"
        app:layout_constraintLeft_toLeftOf="parent"></CheckBox>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="@color/purple_200"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="@color/purple_200"
        android:text="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>